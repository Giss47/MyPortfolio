@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary w-auto mb-3"
       asp-controller="Account"
       asp-action="Register">
        Add new user
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id: @user.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
                <h6 class="card-text"> City: @user.City</h6>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-primary"
                       asp-controller="administration"
                       asp-action="EditUser"
                       asp-route-id="@user.Id">Edit</a>

                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit"
                                class="btn btn-danger">
                            Delete
                        </button>
                        <button type="button" class="btn btn-primary"
                                onclick="confirmDelete('@user.Id', false)">
                            No
                        </button>
                    </span>

                    <span id="deleteSpan_@user.Id">
                        <button type="button" class="btn btn-danger"
                                onclick="confirmDelete('@user.Id', true)">
                            Delete
                        </button>
                    </span>
                </form>
            </div>
        </div>

    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users creatd yet
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-body">
        </h5>
        <a class="btn btn-primary w-auto" asp-controller="Account" asp-action="Register">
            Add new user
        </a>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}