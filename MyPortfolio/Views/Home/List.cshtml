@model IEnumerable<Employee>
@inject MyPortfolio.StorageServices.IStorageSrvices _sotrage
@{
    ViewBag.Title = "Employee Management";

}

<div class="employeeList">
    @foreach (var employee in Model)
    {
        var photoPath = _sotrage.Getpath(employee.PhotoPath) ?? "~/images/employees/noimage.jpg";

        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id"
                   class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>